@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <title>PurplePen</title>
    <link href="~/Content/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/css/screen.css" rel="stylesheet" />
    <script type="text/javascript" src="http://code.createjs.com/easeljs-0.6.0.min.js"></script>

</head>
<body>
    @RenderPage("~/Views/Navigation/Navigation.cshtml")
    <!-- KOEKEN  http://msdn.microsoft.com/en-us/library/ms178581.ASPX-->
    <div id="wrapper">
        <div id="uploadedDesign">
            <div id="uploadTabs">
                <div class="uTab" id="tab1">1</div>
                <div class="uTab" id="tab2">2</div>
                <div class="uTab" id="tab3">3</div>
            </div>
            <input type="button" class="flatBtn" value="Show dots" onclick="showDots()" />
            <input type="button" class="flatBtn" value="Hide dots" onclick="removeDots()" />
            <input type="button" class="flatBtn" value="View large img" onclick="showFullImg()" />
            <div id="design">
                <canvas id="placeDots" width="500" height="500" style="background-color: black;"></canvas>
                <p id="designDescription">Description</p>
            </div>
        </div>
        <div id="comments">
            <div id="commentTabs">
                <div class="cTab" id="generalTab"><a>General</a></div>
                <div class="cTab" id="specificTabs"><a>Specific</a></div>
            </div>
            <div id="commentList">
                <div class="commentItem">
                    <img src="#" alt="userImg" />
                    <h4>Username</h4>
                    <p>Comment</p>
                </div>
            </div>
            <form>
                <input type="text" required />
                <input type="submit" value="Send" />
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/dot.js"></script>
</body>

</html>
